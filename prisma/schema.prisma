generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id                 String        @id @default(uuid())
  contact_name       String
  email              String        @unique
  postal_code        String
  address            String
  latitude           Decimal
  longitude          Decimal
  mobile_number      String        @unique
  password           String
  created_at         DateTime      @default(now())
  updated_at         DateTime      @default(now())
  organization_token RefreshToken?
  pets               Pet[]         @relation("organization_pets")

  @@map("organizations")
}

model RefreshToken {
  id              String       @id @default(uuid())
  expires_in      Int
  organization_id String       @unique
  organization    Organization @relation(fields: [organization_id], references: [id])
  created_at      DateTime     @default(now())

  @@map("refresh_tokens")
}

model Pet {
  id                 String                @id @default(uuid())
  name               String
  description        String
  age                String
  energy_level       Int
  size               String
  independence_level String
  environment_type   String
  pet_images         PetImage[]
  requirements       AdoptionRequirement[]
  created_at         DateTime              @default(now())
  updated_at         DateTime              @default(now())
  organization_id    String
  organization       Organization          @relation(fields: [organization_id], references: [id], name: "organization_pets")

  @@map("pets")
}

model AdoptionRequirement {
  id          String  @id @default(uuid())
  description String
  pet         Pet?    @relation(fields: [pet_id], references: [id])
  pet_id      String?

  @@map("adoption_requirements")
}

model PetImage {
  id         String   @id @default(uuid())
  path       String
  pet_id     String
  pet        Pet      @relation(fields: [pet_id], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("pet_images")
}
